{
  "net_name": "duet_fulltext_trainex_validex",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/duet.weights",
      "num_epochs": 20000,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.001
  },
  "inputs": {
    "share": {
        "embed_path": "../data/support/embed_query_50.txt",
        "ngraph": "../data/support/ngraph_en_cn.txt",
        "train_embed": true,
        "query_maxlen": 10,
        "doc_maxlen": 1000,
        "batch_size": 8
    },
    "train": {
        "input_type": "Duet_PairGenerator", 
        "phase": "TRAIN",
        "data_path": "/Users/YukunZheng/Documents/SourceTree/MatchZoo_zyk/runtime_data/fulltext/real_train_HL_solrex",
        "rel_gap": 1.0,
        "high_label": 3.0,
        "query_per_iter": 20,
        "batch_per_iter": 10
    },
    "valid": {
        "input_type": "Duet_ListGenerator", 
        "phase": "EVAL",
        "data_path": "/Users/YukunZheng/Documents/SourceTree/MatchZoo_zyk/runtime_data/fulltext/real_valid_HL_solrex",
        "rel_gap": 0.0,
        "high_label": 0.0
    }
