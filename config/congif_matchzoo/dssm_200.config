{
  "net_name": "DSSM",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/dssm.weights",
      "num_epochs": 20000,
      "num_batch": 1,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus_train": "../data/200_set/150_train/150_train_qid_seg.txt",
        "text2_corpus_train": "../data/200_set/150_train/150_train_title_seg.txt",
        "text1_corpus_test":  "../data/200_set/50_test/50_test_qid_seg.txt",
        "text2_corpus_test":  "../data/200_set/50_test/50_test_title_seg.txt",
        "embed_size": 200,
        "word_dict": "../data/word_dict.txt"
    },
    "train": {
        "input_type": "DSSM_PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 3,
        "batch_per_iter": 5,
        "batch_size": 200,
        "relation_file": "../data/200_set/150_train/150_train_qrel.txt"
    },
    "valid": {
        "input_type": "DSSM_ListGenerator", 
        "phase": "EVAL",
        "relation_file": "../data/200_set/50_test/50_test_qrel.txt"
    },
    "test": {
        "input_type": "DSSM_ListGenerator", 
        "phase": "test",
        "batch_list": 10,
        "relation_file": "../data/example/ranking/relation_test.txt"
    },
    "predict": {
        "input_type": "DSSM_ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "../data/example/ranking/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "dssm.predict.test.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "dssm.DSSM",
    "hidden_sizes": [100, 30]
  },
  "losses": [ "rank_hinge_loss" ],
  "metrics": [ "ndcg@10", "ndcg@3", "ndcg@5", "map" ]
}

