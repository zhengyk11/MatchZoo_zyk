{
  "net_name": "ARCII",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/arcii.weights",
      "num_epochs": 1000,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.0001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../data/mq2007/qid_query.txt",
        "text2_corpus": "../data/mq2007/docid_doc.txt",
        "use_dpool": true,
        "fill_word": 193367,
        "embed_size": 50,
        "vocab_size": 193368,
        "train_embed": false,
        "embed_path": "../data/mq2007/embed_wiki-pdc_d50_norm",
        "text1_maxlen": 20,
        "text2_maxlen": 500
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "../data/mq2007/relation.train.fold1.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/mq2007/relation.test.fold2.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "../data/mq2007/relation.test.fold1.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "../data/mq2007/relation.test.fold1.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "predict.test.fold1.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "arcii.ARCII"
  },
  "losses": [ "rank_hinge_loss" ],
  "metrics": [ "ndcg@3", "ndcg@5", "map" ]
}

