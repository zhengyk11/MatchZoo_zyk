{
  "net_name": "match_pyramid",
  "global":{
      "model_type": "PY",
      "weights_file": "./models/matchpyramid_classify.weights",
      "num_epochs": 100,
      "num_batch": 10,
      "optimizer": "adam",
      "learning_rate": 0.00001
  },
  "inputs": {
    "share": {
        "text1_corpus": "../data/example/classification/corpus_preprocessed.txt",
        "text2_corpus": "../data/example/classification/corpus_preprocessed.txt",
        "use_dpool": true,
        "fill_word": 3272,
        "embed_size": 100,
        "train_embed": true,
        "vocab_size": 3273,
        "target_mode": "classification",
        "class_num": 2,
        "text1_maxlen": 20,
        "text2_maxlen": 20
    },
    "train": {
        "input_type": "PointGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 20,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "../data/example/classification/relation_train.txt"
    },
    "valid": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "../data/example/classification/relation_train.txt"
    },
    "test": {
        "input_type": "PointGenerator", 
        "phase": "EVAL",
        "batch_size": 100,
        "relation_file": "../data/example/classification/relation_test.txt"
    },
    "predict": {
        "input_type": "PointGenerator", 
        "phase": "PREDICT",
        "batch_size": 100,
        "relation_file": "../data/example/classification/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TEXTNET",
      "save_path": "predict.test.fold1.txt"
    }
  },
  "model": {
    "model_path": "./models/",
    "model_py": "matchpyramid_classify.MatchPyramid"
  },
  "losses": [ "categorical_crossentropy" ],
  "metrics": [ "accuracy" ]
}

